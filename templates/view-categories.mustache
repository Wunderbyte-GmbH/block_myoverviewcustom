<div class="category-group mb-4">
    <div class="card-grid mx-0 row row-cols-1 row-cols-sm-2 row-cols-md-4" data-region="card-deck" role="list">
        {{#categories}}
            <div class="col">
                <div class="card course-card mx-1 category-link" role="listitem"
                    data-category="{{.}}" style="cursor: pointer;">
                    
                    <!-- Header image placeholder -->
                    <div class="card-header-image-placeholder"></div>

                    <div class="card-body pr-1 d-flex flex-column justify-content-center text-center">
                        <div class="mb-2">
                            <i class="icon fa fa-folder fa-2x text-muted" aria-hidden="true"></i>
                        </div>
                        <strong class="text-truncate">{{.}}</strong>
                    </div>
                </div>
            </div>
        {{/categories}}
    </div>
</div>

<style>
.category-group .course-card .card-header-image-placeholder {
    height: 100px;
    background-color: #f5f5f5;
    background-size: cover;
    background-position: center;
    border-top-left-radius: 0.5rem;
    border-top-right-radius: 0.5rem;
}
</style>